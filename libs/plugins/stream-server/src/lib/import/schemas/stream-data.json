{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/project-flogo/flogo-web/schemas/1.0.0/stream-data.json",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "metadata": {
      "$ref": "common.json#/definitions/metadata"
    },
    "stages": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/stage"
      }
    }
  },
  "definitions": {
    "stage": {
      "type": "object",
      "required": ["ref"],
      "properties": {
        "ref": {
          "type": "string",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": true,
        "description": true,
        "settings": {
          "type": "object",
          "additionalProperties": true
        },
        "input": {
          "type": "object",
          "additionalProperties": true
        },
        "output": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
